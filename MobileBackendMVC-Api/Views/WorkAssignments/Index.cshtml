@model IEnumerable<MobileBackendMVC_Api.ViewModels.WorkAssignmentsViewModel>

@{
    ViewBag.Title = "Index";
}

@section scripts {
    <script src="~/Scripts/DataTables/jquery.dataTables.js"></script>
    <script src="~/Scripts/DataTables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        // oma filtteröintifunktio ..., jotka ovat aktiivisia
        $.fn.dataTable.ext.search.push(function (settings, data, dataIndex) {
            // luetaan valintaruudun asetus
            var showArchive = $("#showArchiveWorkAssignmentsCheckbox").is(":checked");

            // luetaan 11. solun arvo: tämä on "Tila"
            var activeWorkassignment = settings.aoData[dataIndex].anCells[10].children[0].checked;

            /* Jos käyttäjä on valinnut asetuksen "Näytä aktiiviset", otetaan listalle
             * mukaan myös arkistoidut asiakkaat. Muussa tapauksessa (oletusarvo) ei näytetä.
             * Tämän funktion paluuarvo kertoo, näytetäänkö rivi taulukossa vai ei. */
            if (showArchive) {
                // näytetään kaikki asiakkaat, myös arkistoidut
                return true;
            }
            else {
                if (activeWorkassignment) {
                    // ei näytetä arkistoituja asiakkaita
                    return true;
                }
                else {
                    return false;
                }
            }
        });

        $(function () {
            // sivun alustus
            //alert("Sivun alustus");
            var workassignmentTaulu = $("#workAssignmentTable").DataTable();

            $("#showArchiveWorkAssignmentsCheckbox").change(function () {
                // kun käyttäjä napsauttaa valintaruutua, päivitetään asiakastaulukko
                workassignmentTaulu.draw();
            });
        });

        // oma filtteröintifunktio ..., jotka ovat aktiivisia
        $.fn.dataTable.ext.search.push(function (settings, data, dataIndex) {
            // luetaan valintaruudun asetus
            var showArchive = $("#showArchiveInProgressCheckbox").is(":checked");

            // luetaan 11. solun arvo: tämä on "Tila"
            var activeInProgress = settings.aoData[dataIndex].anCells[3].children[0].checked;

            /* Jos käyttäjä on valinnut asetuksen "Näytä aktiiviset", otetaan listalle
             * mukaan myös arkistoidut asiakkaat. Muussa tapauksessa (oletusarvo) ei näytetä.
             * Tämän funktion paluuarvo kertoo, näytetäänkö rivi taulukossa vai ei. */
            if (showArchive) {
                // näytetään kaikki asiakkaat, myös arkistoidut
                return true;
            }
            else {
                if (activeInProgress ) {
                    // ei näytetä arkistoituja asiakkaita
                    return true;
                }
                else {
                    return false;
                }
            }
        });

        $(function () {
            // sivun alustus
            //alert("Sivun alustus");
            var workassignmentTaulu = $("#workAssignmentTable").DataTable();

            $("#showArchiveInProgressCheckbox").change(function () {
                // kun käyttäjä napsauttaa valintaruutua, päivitetään asiakastaulukko
                workassignmentTaulu.draw();
            });
        });

        // oma filtteröintifunktio ..., jotka ovat aktiivisia
        $.fn.dataTable.ext.search.push(function (settings, data, dataIndex) {
            // luetaan valintaruudun asetus
            var showArchive = $("#showArchiveCompletedCheckbox").is(":checked");

            // luetaan 11. solun arvo: tämä on "Tila"
            var activeCompleted = settings.aoData[dataIndex].anCells[5].children[0].checked;

            /* Jos käyttäjä on valinnut asetuksen "Näytä aktiiviset", otetaan listalle
             * mukaan myös arkistoidut asiakkaat. Muussa tapauksessa (oletusarvo) ei näytetä.
             * Tämän funktion paluuarvo kertoo, näytetäänkö rivi taulukossa vai ei. */
            if (showArchive) {
                // näytetään kaikki asiakkaat, myös arkistoidut
                return true;
            }
            else {
                if (activeCompleted) {
                    // ei näytetä arkistoituja asiakkaita
                    return true;
                }
                else {
                    return false;
                }
            }
        });

        $(function () {
            // sivun alustus
            //alert("Sivun alustus");
            var workassignmentTaulu = $("#workAssignmentTable").DataTable();

            $("#showArchiveCompletedCheckbox").change(function () {
                // kun käyttäjä napsauttaa valintaruutua, päivitetään asiakastaulukko
                workassignmentTaulu.draw();
            });
        });

    </script>

}

